function forward()
    turtle.dig()
    turtle.forward()
end

function digAround(squareWidth)
    for i=1,squareWidth do
        forward()
    end
    turtle.turnRight()
    for i=1,squareWidth do
        forward()
    end
    turtle.turnRight()
    for i=1,squareWidth do
        forward()
    end
    turtle.turnRight()
    for i=1,squareWidth do
        forward()
    end
    turtle.turnRight()
end

function digExpandingSquares(times)
    print('times: ', times)
    for i=1,times do
        digAround(i)
    end
end

function digSquare(width, depth)
    print("digging square of width: ", width, " and depth: ", depth)

    for i=1,depth do
        turtle.digDown()
        turtle.down()
        digExpandingSquares(width)
    end

    for i=1,depth do
        turtle.digUp()
        turtle.up()
    end
end

